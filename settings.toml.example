# Copy this file to settings.toml and fill in your credentials

# WiFi credentials
CIRCUITPY_WIFI_SSID = "your_wifi_ssid"
CIRCUITPY_WIFI_PASSWORD = "your_wifi_password"

# MQTT broker settings
MQTT_BROKER = "192.168.0.12"
MQTT_PORT = "1883"

# Board identifier (unique for each device)
BOARD_ID = "1"

# Optional: Enable/disable built-in NeoPixel (defaults to true)
USE_NEOPIXEL = "true"

# Optional: Enable capacitive touch switch (defaults to false)
USE_TOUCH_SWITCH = "false"
TOUCH_PIN = "A1"  # Pin for capacitive touch (A0, A1, A2, A3, etc.)

# Optional: Override the auto-generated MQTT topic (home/light/{BOARD_ID})
# MQTT_TOPIC = "custom/topic/path"
